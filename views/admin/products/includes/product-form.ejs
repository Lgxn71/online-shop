<form
  class="form"
  action="<%=submitPath%>?_csrf=<%= locals.csrfToken %>"
  method="POST"
  enctype="multipart/form-data"
>
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      name="title"
      id="title"
      value="<%=product.title%>"
      required
    />

    <label for="summary">Summary</label>
    <input
      type="text"
      name="summary"
      id="summary"
      value="<%=product.summary%> "
      required
    />

    <label for="price">Price</label>
    <input
      type="number"
      name="price"
      id="price"
      min="0.01"
      step="0.01"
      value="<%=product.price%>"
      required
    />

    <label for="description">Description</label>
    <textarea name="description" id="description" rows="7" required>
<%=product.description%></textarea
    >
  </div>
  <div>
    <!-- in case of updating page its not necessary to upload image, but in case of creating , its mandatory -->
    <div id="image-upload-preview">
      <label for="image" class="imgPickerBtn btn-gray" >Choose file</label>
      <input type="file" name="image" id="image" accept="image/png,image/jpg" <% if(imageRequired){ %>required<% } %>/>
      <img src="" alt="Selected Image" />
    </div>
    <button type="submit" class="btn-full">Submit</button>
    <button type="reset" class="btn-empty">Reset</button>
  </div>
</form>
