
<%-include('../../shared/includes/head',{pageTitle:'New Product'}) %>
<link rel="stylesheet" href="/styles/form.css">
</head>
<body>
  <%-include('../../shared/includes/header')%>
    <main>
      <h1>Add new Product</h1>
    <form class = "form" action="/admin/products?_csrf=<%= locals.csrfToken %>"method="POST" enctype="multipart/form-data">
     <div>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" required>
 
        <label for="summary">Summary</label>
        <input type="text" name="summary" id="summary" required>

        <label for="price">Price</label>
        <input type="number" name="price" id="price" min="0.01" step="0.01" required>
   
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="7" required></textarea>
     </div>
      <div>
        <label for="image" id="btn-gray">Choose file</label>
        <input type="file" name="image" id="image" accept="image/png,image/jpg"> 
        <button type="submit" class="btn-full">Submit</button>
        <button type="reset" class="btn-empty">Reset</button>
      </div>
    </form>
    </main>
 
<%-include('../../shared/includes/footer') %>  