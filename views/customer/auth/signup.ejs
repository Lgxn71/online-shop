
    <%-include('../includes/head',{pageTitle:'Signup'}) %>
    <link rel="stylesheet" href="/styles/signup.css"> 
  </head>
  <body>
    <%-include('../includes/header')%>
      <main>
        <h1>Create a New Account</h1>
        <section class="error-block">
          <div>
            <h3>Invalid Input</h3>
            <p>Please check your input. Password must be at least 6 characters long, postal code must be 5 characters long</p>
          </div>
        </section>
          <form class="form-signup" action="/signup" method="POST">
            <div>
              <label for="email">Your Email</label>
              <input type="email" id="email" name="email" required>
              <label for="confirm-email">Confirm Email</label>
              <input type="email" id="confirm-email" name="confirm-email" required>
              <label for="password">Password</label>
              <input type="password" name="password" id="password" minlength="6" required>
            </div>
            <hr class="signup-break">
            <div>
              <label for="full-name">Full Name</label>
              <input type="text" name="full-name" id="full-name" required>
              <label for="street">Street</label>
              <input type="text" name="street" id="street" required>
              <label for="postal-code">Postal Code</label>
              <input type="text" name="postal-code" id="postal-code" minlength="5" required>
              <label for="city">City</label>
              <input type="text" name="city" id="city" required>
              <div class="btn-container">
                <button class="btn-full" type="submit">Create Account</button>
                <a class = "btn-empty" href="/login">Login instead</a>
              </div>
           
            </div>
          </form>
      </main>
   
<%-include('../includes/footer') %> 